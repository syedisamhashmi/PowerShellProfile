# Key indicators
[keyindicator]
KEY=CAPS
HIDE_WHEN_OFF=0
markup=pango
interval=once
signal=11

[keyindicator]
KEY=NUM
markup=pango
HIDE_WHEN_OFF=0
interval=once
signal=11

# Guess the weather hourly
[weather]
command=curl -Ss 'https://wttr.in/fort-worth?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=450
color=#A4C2F4

[toggle]
#command=/home/prosdkr/i3blocks/vpn/vpn
interval=2
label=" VPN "
COMMAND_ON=mullvad connect 
#& kill i3blocks
COMMAND_OFF=mullvad disconnect
#& kill i3blocks
#COMMAND_STATUS=test -d /proc/sys/net/ipv4/conf/wg0-mullvad
COMMAND_STATUS=mullvad status | grep "Connected"
COLOR_ON=#00ff00
COLOR_OFF=#ff0000
